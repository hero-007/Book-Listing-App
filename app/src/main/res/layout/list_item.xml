<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="2.5dp"
    android:layout_marginTop="2.5dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/Book_cover_pic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/book_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20sp"
            tools:text="Title Of the Book" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="20sp"
            tools:text="Authors Of the Book"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/Book_price_here"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Price Of the Book"
            android:visibility="visible"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/starRate"
            style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:numStars="5"
            android:rating="2"
            android:stepSize="0.5"
            android:visibility="visible"
            android:clickable="false" />

        <TextView
            android:id="@+id/Read_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.75"
            android:background="#F44336"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Read Description"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


    </LinearLayout>


</LinearLayout>